<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/background_cornerblue"
        >

        <ImageView
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:paddingTop="15dp"
            android:src="@drawable/back_icon"
            app:tint="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="48sp"
            android:layout_marginRight="48sp"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36dp"
                android:text="Registeration"
                android:transitionName="logo_text1"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/bold"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SignUp to start your new Journey"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/pl" />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.4"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="373dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">


            <EditText
                android:id="@+id/reg_name"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/edit_textcornerregister"
                android:fontFamily="@font/pl"
                android:inputType="text"
                android:hint="Full Name"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:textColor="@color/black"
                android:textColorHint="#606060" />

            <EditText
                android:id="@+id/reg_Username"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/edit_textcornerregister"
                android:fontFamily="@font/pl"
                android:hint="Username"
                android:inputType="text"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:textColor="@color/black"
                android:textColorHint="#606060" />

            <EditText
                android:id="@+id/reg_email"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/edit_textcornerregister"
                android:fontFamily="@font/pl"
                android:inputType="text"
                android:hint="Email"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:textColor="@color/black"
                android:textColorHint="#606060" />

            <EditText
                android:id="@+id/reg_phoneNo"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/edit_textcornerregister"
                android:fontFamily="@font/pl"
                android:hint="Phone No"
                android:inputType="number"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:textColor="@color/black"
                android:textColorHint="#606060" />

            <EditText
                android:id="@+id/reg_password"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/edit_textcornerregister"
                android:fontFamily="@font/pl"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:textColor="@color/black"
                android:textColorHint="#606060" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/reg_btn"
                android:layout_width="128dp"
                android:layout_height="40dp"
                android:layout_marginLeft="260dp"
                android:layout_weight="6"
                android:backgroundTint="@color/color_orange"
                android:fontFamily="@font/bold"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="bold"
                app:cornerRadius="10dp" />


        </LinearLayout>
        `</RelativeLayout>
</LinearLayout>